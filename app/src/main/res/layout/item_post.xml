<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_20ssp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/donut"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/user_name_text"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintStart_toEndOf="@id/user_image"
                app:layout_constraintTop_toTopOf="@id/user_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="@string/asdasdasdadasdadadadasdadasdadasasdasdasd_asdasdasdasdadasdaasdasd"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@id/user_image" />

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/mascot_1"
                app:layout_constraintTop_toBottomOf="@id/user_caption" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/light_Purple"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="@string/like_button"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:icon="@drawable/baseline_thumb_up_24"
                app:iconSize="@dimen/_10ssp"
                app:iconTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/post_image"
                app:layout_constraintWidth_percent="0.3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/light_Purple"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="@string/comment_button"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:icon="@drawable/baseline_comment_24"
                app:iconSize="@dimen/_10ssp"
                app:iconTint="@color/black"
                app:layout_constraintEnd_toStartOf="@id/button_share"
                app:layout_constraintStart_toEndOf="@id/button_like"
                app:layout_constraintTop_toBottomOf="@id/post_image"
                app:layout_constraintWidth_percent="0.4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/light_Purple"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="@string/share_button"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:icon="@drawable/baseline_share_24"
                app:iconSize="@dimen/_10ssp"
                app:iconTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/post_image"

                app:layout_constraintWidth_percent="0.3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>